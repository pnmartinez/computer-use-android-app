<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_state_list_anim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/favoriteNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favorite Name"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/runFavoriteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                app:icon="@drawable/ic_play"
                app:iconTint="@android:color/holo_green_dark"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteFavoriteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/holo_red_dark"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/favoriteCommandText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Command text"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textStyle="italic"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/favoriteTimestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2023-01-01 12:00:00"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/favoriteStepsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/steps_label"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favoriteStepsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Step 1\n2. Step 2"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:maxLines="3"
            android:ellipsize="end" />
            
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 